@model List<AcunMefyaAkademiPortfolio.Models.TblService>

<div id="services" class="section lb">
    <div class="container">
        <div class="section-title text-left">
            <h3>Hizmetlerim</h3>
            <p>Kişiselleştirilmiş tasarımlar ve yaratıcı projelerle ihtiyaçlarınıza özel çözümler sunuyorum.</p>
        </div><!-- end title -->

        <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="services-inner-box">
                    <div class="ser-icon">
                        <div class="icon d-flex align-items-center justify-content-center"><span><img src="@item.ImageUrl " style="width:80px;height:80px;" /></span></div>
                    </div>
                    <h2>@item.Title</h2>
                    <p>@item.Description</p>
                </div>
            </div><!-- end col -->
        }
        </div><!-- end row -->
    </div><!-- end container -->
</div>
