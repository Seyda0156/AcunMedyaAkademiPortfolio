﻿@model AcunMefyaAkademiPortfolio.Models.TblTestimonial

@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Referans Güncelleme</h3>
<form method="post">
    <label>Referans ID</label>
    <input type="text" class="form-control" name="TestimonialID" value="@Model.TestimonialID" />


    <label>Başlık</label>
    <input type="text" class="form-control" name="Title" value="@Model.Title" />

    <label>Açıklama</label>
    <input type="text" class="form-control" name="Description" value="@Model.Description" />

    <label>Ad Soyad</label>
    <input type="text" class="form-control" name="NameSurname" value="@Model.NameSurname" />

    <label>Resmi</label>
    <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl" />

    <label>Meslek</label>
    <input type="text" class="form-control" name="Job" value="@Model.Job" />


    <br /><br />
    <button class="btn btn-info">Referans Güncelle</button>
</form>