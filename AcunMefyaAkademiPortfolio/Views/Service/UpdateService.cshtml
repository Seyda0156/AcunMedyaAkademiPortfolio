﻿@model AcunMefyaAkademiPortfolio.Models.TblService

@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Servis Güncelleme</h3>
<form method="post">
    <label>Servis ID</label>
    <input type="text" class="form-control" name="ServiceID" value="@Model.ServiceID" />

    <label>Servis Adı</label>
    <input type="text" class="form-control" name="Title" value="@Model.Title" />

    <label>Servis Açıklaması</label>
    <input type="text" class="form-control" name="Description" value="@Model.Description" />

    <label>Servis Resmi</label>
    <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl" />

    <br /><br />
    <button class="btn btn-info">Servis Güncelle</button>
</form>