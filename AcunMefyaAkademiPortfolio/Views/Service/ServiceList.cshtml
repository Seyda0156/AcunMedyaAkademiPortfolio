﻿@model List<AcunMefyaAkademiPortfolio.Models.TblService>

@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Service Liste</h2>

<table class="table table-bordered">
    <tr>
        <th>Servis Id</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim Url</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px;height:150px" /></td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Service/DeleteService/" class="btn btn-primary">Yeni Servis Girişi</a>