﻿@model List<AcunMefyaAkademiPortfolio.Models.TblContact>

@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ad Soyad</th>
        <th>Mail</th>
        <th>Telefon</th>
        <th>Sil</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td><a href="/Contact/OpenContact/@item.ContactId" class="btn-success">Mesajı Aç</a></td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn-danger">Sil</a></td>
        </tr>
    }
</table>